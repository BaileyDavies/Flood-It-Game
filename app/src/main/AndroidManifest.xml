<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bailey.flood_it">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/flood_it_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/flood_it_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".MainMenu"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/app_name"
            android:parentActivityName=".NewGameActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name=".ThemesActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainMenu"
            tools:targetApi="jelly_bean" />
        <activity
            android:name=".NewGameActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainMenu"
            tools:targetApi="jelly_bean" />
        <activity
            android:name=".HighscoresActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainMenu"
            tools:targetApi="jelly_bean" />

    </application>

</manifest>